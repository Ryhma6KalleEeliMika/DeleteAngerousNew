<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MainMenuController">
   <children>
      <Pane prefHeight="768.0" prefWidth="1366.0">
         <children>
            <ImageView fitHeight="768.0" fitWidth="1366.0" pickOnBounds="true">
               <image>
                  <Image url="@../Images/mainmenu.jpg" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <BorderPane prefHeight="768.0" prefWidth="1366.0" style="-fx-border-color: darkorange; -fx-border-width: 10;">
         <top>
            <Label text="DELETE ANGEROUS" textFill="DARKORANGE" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Knife Princess" size="96.0" />
               </font>
               <BorderPane.margin>
                  <Insets top="75.0" />
               </BorderPane.margin>
            </Label>
         </top>
         <center>
            <VBox alignment="TOP_CENTER" prefHeight="507.0" prefWidth="1025.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="1356.0">
                     <children>
                        <Button fx:id="startGameButton" mnemonicParsing="false" onAction="#startGameButtonAction" style="-fx-background-color: transparent;" text="NEW GAME" textFill="DARKORANGE">
                           <font>
                              <Font name="Xirod-Regular" size="36.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0">
                     <children>
                        <Button fx:id="optionButton" mnemonicParsing="false" style="-fx-background-color: transparent;" text="OPTIONS" textFill="DARKORANGE">
                           <font>
                              <Font name="Xirod-Regular" size="36.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0">
                     <children>
                        <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitButtonAction" style="-fx-background-color: transparent;" text="EXIT" textFill="DARKORANGE">
                           <font>
                              <Font name="Xirod-Regular" size="36.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <Pane prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
